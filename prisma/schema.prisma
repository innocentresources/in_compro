generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  passwordHash  String
  role          Role      @default(EDITOR)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  insights      Insight[]
}

enum InsightCategory {
  PRESS_RELEASE
  BLOG
  NEWS
  UPDATE
}

model Insight {
  id        Int              @id @default(autoincrement())
  title     String
  slug      String           @unique
  excerpt   String
  content   String
  category  InsightCategory  @default(BLOG)
  status    InsightStatus    @default(DRAFT)
  imageUrl  String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

enum Role {
  ADMIN
  EDITOR
}

enum InsightStatus {
  DRAFT
  PUBLISHED
}
